@model Cinema

@{
    ViewData["Title"] = "Add New Cinema";
}

<div class="row">
    <div class="col-md-8 offset-2">
        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
        {
            <h4>Add a New Cinema</h4>

        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger">
                    </div>
                    <div class="form-group text-center">
                        <label asp-for="Brandlogo" class="control-label"> Brand Logo URL</label>
                        <input asp-for="Brandlogo" class="form-control" />
                        <span asp-validation-for="Brandlogo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CinemaInfo" class="control-label"></label>
                        <input asp-for="CinemaInfo" class="form-control" />
                        <span asp-validation-for="CinemaInfo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Add" class="btn btn-outline-info float-end" />


                    </div>
                </form>

            </div>
        </div>
        }
        
    </div>

</div>